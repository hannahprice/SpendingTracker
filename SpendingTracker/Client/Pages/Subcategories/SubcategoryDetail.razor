@page "/subcategories/{id}"

<MudGrid Justify="Justify.Center" Spacing="5">
    <MudItem xs="12" sm="2" Class="mt-10">
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.ArrowBack" Size="Size.Large" Href="/categories"/>
    </MudItem>
    <MudItem xs="12" sm="4" Class="mt-10 d-flex justify-center">
        <MudText Typo="Typo.h3">Subcategory detail</MudText>
    </MudItem>
    <MudItem xs="12" sm="2" Class="mt-10 d-flex justify-end">
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.DeleteForever" Size="Size.Large" OnClick="ToggleDialog"/>
    </MudItem>

    <MudItem xs="8">
        <MudPaper Elevation="3" Class="pa-16">
            Description: @Subcategory.Description
        </MudPaper>
    </MudItem>
</MudGrid>

<MudDialog @bind-IsVisible="DialogVisible">
    <DialogContent>
        Delete subcategory?
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="(ToggleDialog)">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="DeleteSubcategory">Ok</MudButton>
    </DialogActions>
</MudDialog>