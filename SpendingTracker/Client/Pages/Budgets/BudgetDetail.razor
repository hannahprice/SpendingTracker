@page "/budgets/{id}"
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<MudGrid Justify="Justify.Center" Spacing="5">
    <MudItem xs="12" sm="2" Class="mt-10">
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.ArrowBack" Size="Size.Large" Href="/budgets"/>
    </MudItem>
    <MudItem xs="12" sm="4" Class="mt-10 d-flex justify-center">
        <MudText Typo="Typo.h3">Budget detail</MudText>
    </MudItem>
    <MudItem xs="12" sm="2" Class="mt-10 d-flex justify-end">
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.DeleteForever" Size="Size.Large" OnClick="ToggleDialog"/>
    </MudItem>

    <MudItem xs="8">
        <MudPaper Elevation="3" Class="pa-16">
            Amount: @BudgetsState.Value.BudgetDetail?.Amount
            Frequency: @BudgetsState.Value.BudgetDetail?.Frequency
        </MudPaper>
    </MudItem>
</MudGrid>

<MudDialog @bind-IsVisible="DialogVisible">
    <DialogContent>
        Delete budget?
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="(ToggleDialog)">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="DeleteBudget">Ok</MudButton>
    </DialogActions>
</MudDialog>